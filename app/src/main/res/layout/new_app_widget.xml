<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.DailyDeliveryRecords.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.DailyDeliveryRecords.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.DailyDeliveryRecords.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_full_name"
        android:text="@string/app_full_name"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"/>
</LinearLayout>